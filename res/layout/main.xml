<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"  android:layout_height="wrap_content">
        <TextView android:id="@+id/clip_instruction"
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/select_clips" />

        <TextView android:id="@+id/clip_path" android:editable="true" 
            android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>

   
    <ListView android:id="@+id/clip_name_list_view" android:choiceMode="multipleChoice" android:textFilterEnabled="true"
        android:layout_width="fill_parent" android:layout_height="fill_parent" />
</LinearLayout>
